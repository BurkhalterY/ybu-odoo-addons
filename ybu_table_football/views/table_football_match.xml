<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_table_football_match_form" model="ir.ui.view">
        <field name="name">table.football.match.form</field>
        <field name="model">table.football.match</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="priority" widget="priority" class="me-3"/>
                        <field name="name"/>
                    </h1>
                    <group>
                        <field name="date"/>
                    </group>
                    <group>
                        <group string="Winners">
                            <field name="winner_score" string="Score"/>
                            <field name="winner_ids" string="Team" widget="many2many_tags_avatar"/>
                        </group>
                        <group string="Losers">
                            <field name="loser_score" string="Score"/>
                            <field name="loser_ids" string="Team" widget="many2many_tags_avatar"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_table_football_match_tree" model="ir.ui.view">
        <field name="name">table.football.match.tree</field>
        <field name="model">table.football.match</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="winner_score" decoration-success="1"/>
                <field name="winner_ids" decoration-success="1" widget="many2many_tags_avatar"/>
                <field name="loser_score" decoration-danger="1"/>
                <field name="loser_ids" decoration-danger="1" widget="many2many_tags_avatar"/>
            </tree>
        </field>
    </record>

    <record id="action_table_football_match" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Table Football Match</field>
        <field name="res_model">table.football.match</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
